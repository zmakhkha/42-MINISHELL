bash-3.2$ export a='$HOME     lala '
bash-3.2$ env | grep "a="
a=$HOME     lala 
bash-3.2$ echo a
a
bash-3.2$ echo $a
$HOME lala
bash-3.2$ echo "$a"
$HOME     lala 
