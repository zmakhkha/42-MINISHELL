bash-3.2$ export b="$HOME     lala "
bash-3.2$ echo $b
/Users/zmakhkha lala
bash-3.2$ echo "$b"
/Users/zmakhkha     lala 
bash-3.2$ echo '$b'
$b
bash-3.2$ echo $b
/Users/zmakhkha lala
bash-3.2$ '''